@model tp3dotnet.Models.Customer

@{
    ViewData["Title"] = "Créer un client";
}

<h1>Créer un client</h1>

@if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (string error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MembershiptypeID" class="control-label">Type d'adhésion</label>
        <select asp-for="MembershiptypeID" class="form-control" asp-items="ViewBag.member">
            <option value="">Sélectionner un type d'adhésion</option>
        </select>
        <span asp-validation-for="MembershiptypeID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Annuler</a>
</form>
